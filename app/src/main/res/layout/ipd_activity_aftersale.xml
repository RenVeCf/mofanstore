<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F5F5F5"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="退款商品"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="51dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:text="添加"
                android:gravity="center"
                android:background="@drawable/ipd_baisebackbtm"
                android:textSize="12dp"
                android:textColor="#333333"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            ></View>
    <com.mofanstore.util.Ipd_Mylistview
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#EAEAEA"
        android:dividerHeight="1px"
        android:fadingEdge="none"></com.mofanstore.util.Ipd_Mylistview>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
        ></View>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/huow_zt_ll">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="退款原因"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:id="@+id/huowu_zt" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="10dp"
                    android:hint="请选择"
                    android:textSize="13dp"
                    android:layout_centerInParent="true"
                    android:drawableRight="@mipmap/icon_next2"
                    android:textColor="#999999"
                    android:id="@+id/huowu_tv" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F5F5"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="问题描述"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#666666"
                    android:id="@+id/tuikuan_shuom" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="请描述您的退货原因，以便我们更好的核实～（500字以内，最多3张图片）"
                    android:textSize="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:textColorHint="#999999"
                    android:layout_gravity="center"
                    android:gravity="left|top"
                    android:textColor="#999999"
                    android:id="@+id/return_contenttv" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/commit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:text="立即申请"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@mipmap/btmlog"
                />
    </LinearLayout>
</ScrollView>
</LinearLayout>
