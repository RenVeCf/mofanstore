<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F5F5F5"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="15dp"
       android:layout_marginTop="10dp"
       android:background="@mipmap/yhqbj2x"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="￥"
           android:textSize="15dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="35dp"
           android:textColor="#333333"
           android:layout_gravity="center"
           android:gravity="center"
           />
       <TextView
           android:id="@+id/tv_vipname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="100"
           android:textSize="37dp"
           android:layout_alignParentLeft="true"
           android:layout_centerInParent="true"
           android:layout_marginLeft="35dp"
           android:textColor="#333333"
           android:layout_gravity="center"
           android:gravity="center"
           />
       <TextView
           android:layout_toRightOf="@+id/tv_vipname"
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="25dp"
           android:id="@+id/tv_line"
           android:layout_marginTop="12dp"
           android:layout_marginBottom="12dp"
           android:background="@mipmap/yhqxx2x"
           android:layout_gravity="center"
           />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_toRightOf="@+id/tv_line"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="全部商品可用"
               android:textSize="14dp"
               android:layout_marginTop="25dp"
               android:textColor="#333333"
               android:layout_gravity="center|left"
               android:gravity="center|left"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="满500减100"
               android:textSize="18dp"
               android:layout_marginTop="5dp"
               android:textColor="#333333"
               android:layout_gravity="center|left"
               android:gravity="center|left"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="有效期：2018.06.15-2018.08.15"
               android:textSize="11dp"
               android:textColor="#999999"
               android:layout_marginTop="5dp"
               android:layout_gravity="center|left"
               android:gravity="center|left"
               />
           <TextView
               android:layout_width="54dp"
               android:layout_height="20dp"
               android:text="去使用"
               android:textSize="10dp"
               android:textColor="#FFFFFF"
               android:layout_marginTop="15dp"
               android:background="@mipmap/jfhy2x"
               android:layout_gravity="center|left"
               android:gravity="center"
               />
       </LinearLayout>
   </RelativeLayout>
</LinearLayout>
