<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants">
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：4495874125"
            android:textSize="12dp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/order_num" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textSize="12dp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tv_flag" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_ock"
        android:orientation="vertical"
        >

        <com.mofanstore.util.Ipd_Mylistview
            android:id="@+id/cart_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="#EAEAEA"
            android:dividerHeight="1px"
            android:fadingEdge="none"></com.mofanstore.util.Ipd_Mylistview>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_detial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="共2件   总计金额：￥188.00"
            android:textSize="12dp"
            android:textColor="#333333"
            android:gravity="center|right"
            android:layout_marginRight="15dp"
            android:layout_gravity="center|right"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/chakan_tv"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:text="取消"
            android:textSize="12dp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/red_tv"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@mipmap/ipd_myoderhuise"
            />
        <TextView
            android:id="@+id/red_tv"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:text="评价"
            android:textSize="12dp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@mipmap/ipd_myoderhuise"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
        ></View>
</LinearLayout>
