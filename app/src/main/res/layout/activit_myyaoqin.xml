<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ></include>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/linlog"
        android:drawableRight="@mipmap/linlog"
        android:gravity="center"
        android:text=" 好 友 首 单 最 高 得 "/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="¥"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="50优惠券"/>
        </RelativeLayout>
    <ImageView
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:src="@mipmap/yqylt2x"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="33dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/userimg"
                android:layout_width="11dp"
                android:layout_marginRight="10dp"
                android:layout_height="53dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/yqyl12x"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/tv_username"
                android:layout_toRightOf="@+id/userimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="分享活动"
                />
            <TextView
                android:layout_below="@+id/tv_username"
                android:id="@+id/tv_username2"
                android:layout_toRightOf="@+id/userimg"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="邀请好友注册"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/userimg4"
                android:layout_width="21dp"
                android:layout_marginRight="10dp"
                android:layout_height="53dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/yqyl22x"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/tv_username4"
                android:layout_toRightOf="@+id/userimg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="好友首单"
                />
            <TextView
                android:layout_below="@+id/tv_username4"
                android:id="@+id/tv_username5"
                android:layout_toRightOf="@+id/userimg4"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="您将获得一次包邮"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14dp"
        android:textColor="#D7D7E3"
        android:text="活动规则"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"></View>

    <RelativeLayout
        android:id="@+id/xuanz_youhui"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/cart_youhuijuan_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="邀请码："
            android:textColor="#999999"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cart_disname_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/cart_youhuijuan_tv"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="iuweey5r2n"
            android:textColor="#333333"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dis_img"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="一键复制"
            android:textSize="12dp"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/yqylfz2x" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"></View>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:orientation="horizontal"
      >
      <TextView
          android:id="@+id/tv_numren"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:maxLines="1"
          android:ellipsize="end"
          android:layout_gravity="center"
          android:textSize="14dp"
          android:textColor="#333333"
          android:text="邀请记录 0"
          />
      <TextView
          android:id="@+id/tv_numren2"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:maxLines="1"
          android:layout_gravity="center"
          android:ellipsize="end"
          android:textSize="14dp"
          android:textColor="#D7D7E3"
          android:text="优惠券 0"
          />
  </LinearLayout>
    <com.mofanstore.util.Ipd_Mylistview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_num"
        android:layout_marginBottom="80dp"
        android:divider="#F5F5F5"
        android:dividerHeight="1dp"
        ></com.mofanstore.util.Ipd_Mylistview>
    </LinearLayout>
</ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_gravity="center|bottom"
            >
        <Button
            android:id="@+id/comnit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="立即邀请好友"
            android:background="@mipmap/chunsebg"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
