<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F3F3F"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/activity_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/log12x"
        />

    <RelativeLayout
        android:id="@+id/rled1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        >
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@mipmap/zcsj2x"
            android:drawablePadding="10dp"
            android:layout_marginRight="35dp"
            android:background="@null"
            android:hint="输入您的手机号或邮箱"
            android:singleLine="true"
            android:text="15669323594"
            android:textColor="#D4D4D4"
            android:textSize="14dp"
            android:textColorHint="#D4D4D4"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/fg_psw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@null"
            android:hint="输入登录密码"
            android:textColorHint="#D4D4D4"
            android:drawableLeft="@mipmap/mima"
            android:drawablePadding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:text="123456"
            android:textSize="14dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_nocode"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="#D4D4D4"
            android:textSize="12dp"
            android:gravity="center|right"
            android:layout_alignParentLeft="true"
            android:text="忘记密码"/>
        <TextView
            android:id="@+id/tv_rigter"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="#D4D4D4"
            android:textSize="12dp"
            android:gravity="center|left"
            android:layout_alignParentRight="true"
            android:text="注册账户"/>
    </RelativeLayout>

    <Button
        android:id="@+id/comnit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="登录"
        android:background="@mipmap/chunsebg"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#D4D4D4"
        android:layout_marginTop="15dp"
        android:textSize="12dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/linlog"
        android:drawableRight="@mipmap/linlog"
        android:gravity="center"
        android:text=" 快捷登陆 "/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="25dp"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#999999"
        android:textSize="12dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_QQ"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#999999"
        android:textSize="12dp"
        android:drawableTop="@mipmap/qq"
        android:drawablePadding="10dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_wchat"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#999999"
        android:textSize="12dp"
        android:drawableTop="@mipmap/wchat"
        android:drawablePadding="10dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#999999"
        android:textSize="12dp"
        android:gravity="center"
        />
</LinearLayout>
</LinearLayout>
