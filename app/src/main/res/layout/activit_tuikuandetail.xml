<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#F2F2F2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#F2F2F2"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#3F3F3F"
                    >
                    <TextView
                        android:id="@+id/detaikname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:text="审核中"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/cart_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/dfkan2x" />
                </RelativeLayout>



                <com.mofanstore.util.Ipd_Mylistview
                    android:id="@+id/cart_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="#00000000"
                    android:divider="#f5f5f5"
                    android:dividerHeight="1dp"
                    android:fadingEdge="none"></com.mofanstore.util.Ipd_Mylistview>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F5F5F5"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFFFF"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="13dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="订单信息"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:textColor="#333333"
                        android:drawablePadding="5dp"
                        android:textSize="13dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="13dp"
                        >
                        <TextView
                            android:id="@+id/order_num"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="订单编号：47859611"
                            android:gravity="center|left"
                            android:paddingLeft="15dp"
                            android:textColor="#999999"
                            android:drawablePadding="5dp"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/chakan_tv"
                            android:layout_width="85dp"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:text="复制单号"
                            android:textSize="13dp"
                            android:textColor="#999999"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/red_tv"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:background="@mipmap/ipd_myoderhuise"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="实付金额：￥999.00"
                            android:gravity="center|left"
                            android:paddingLeft="15dp"
                            android:textColor="#999999"
                            android:drawablePadding="5dp"
                            android:textSize="13dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/statues"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="订单状态：已完成"
                            android:gravity="center|left"
                            android:paddingLeft="15dp"
                            android:textColor="#999999"
                            android:drawablePadding="5dp"
                            android:textSize="13dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/cj_time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/chaunjiantime"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="下单时间：2015-7-8 23:05:20"
                            android:gravity="center|left"
                            android:paddingLeft="15dp"
                            android:textColor="#999999"
                            android:drawablePadding="5dp"
                            android:textSize="13dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/fk_time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <TextView
                            android:id="@+id/fukuantime"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="支付时间：2015-7-8 23:05:20"
                            android:gravity="center|left"
                            android:paddingLeft="15dp"
                            android:textColor="#999999"
                            android:drawablePadding="5dp"
                            android:textSize="13dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/qs_time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        >
                        <TextView
                            android:id="@+id/qianshoutime"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="发货时间：2015-7-8 23:05:20"
                            android:gravity="center|left"
                            android:paddingLeft="15dp"
                            android:textColor="#999999"
                            android:drawablePadding="5dp"
                            android:textSize="13dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        >
                        <TextView
                            android:id="@+id/shouhuotime"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:text="收货时间：2015-7-8 23:05:20"
                            android:gravity="center|left"
                            android:paddingLeft="15dp"
                            android:textColor="#999999"
                            android:drawablePadding="5dp"
                            android:textSize="13dp" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f5f5f5"
                    ></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center|left"
                        android:text="退款原因"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center|left"
                        android:textColor="#333333"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/detial_shouhou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:text="商品描述不符"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center|left"
                        android:textColor="#333333"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/detial_shouhoutime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="15dp"
                        android:text="提交时间：2018.05.10  14:32:52"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center|left"
                        android:textColor="#999999"
                        android:textSize="12dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#f5f5f5"
                    ></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center|left"
                        android:text="问题描述"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center|left"
                        android:textColor="#333333"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/detial_shouhou2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:text="感觉看到的商品和描述不是很符合，感觉看到的商品和描述不是很符合。"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center|left"
                        android:textColor="#333333"
                        android:textSize="13dp" />
                    <LinearLayout
                        android:id="@+id/ipd_pay_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        >
                        <com.mofanstore.util.Ipd_Gridview
                            android:id="@+id/ipd_pay_grid_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:numColumns="4"
                            android:stretchMode="columnWidth"
                            android:layout_margin="15dp"
                            android:gravity="center"
                            android:horizontalSpacing="10dp"
                            android:verticalSpacing="10dp"
                            ></com.mofanstore.util.Ipd_Gridview>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
