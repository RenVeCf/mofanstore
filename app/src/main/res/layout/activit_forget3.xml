<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F3F3F"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/activity_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>

    <RelativeLayout
        android:id="@+id/rled1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="58dp"
        >
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="输入您的注册邮箱"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:textSize="14dp"
            android:textColorHint="#D4D4D4"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/fg_code"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="phone"
            android:textColorHint="#D4D4D4"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/bt_getAuthCode"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="发送验证码至邮箱"
            android:textColor="#D4D4D4"
            android:textSize="12dp"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/fg_psw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="输入新的登录密码"
            android:textColorHint="#D4D4D4"
            android:password="true"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:textSize="14dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>


    <Button
        android:id="@+id/comnit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="56dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="确定"
        android:background="@mipmap/chunsebg"
        android:textColor="#ffffff"
        android:textSize="16sp" />


</LinearLayout>
