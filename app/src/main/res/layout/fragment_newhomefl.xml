<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3F3F3F"
        >
        <FrameLayout
            android:id="@+id/back"
            android:layout_width="49dp"
            android:layout_gravity="left"
            android:layout_height="49dp">
            <ImageView
                android:id="@+id/tv_commiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/syfltb2x"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/llousuo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:background="@drawable/sousuobtm2"
            >
            <TextView
                android:id="@+id/ed_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入关键词"
                android:textSize="13dp"
                android:textColorHint="#999999"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:drawablePadding="10dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:drawableLeft="@mipmap/sstb2x"
                android:textColor="#666666"
                />

        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:background="#3F3F3F"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_resao"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="热搜："
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                />
            <com.github.jdsjlzx.recyclerview.LuRecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/tv_resao"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:layout_behavior="com.mofanstore.util.FixAppBarLayout"
           >

            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlwaysCollapsed|scroll"
                android:gravity="center_vertical"
                android:orientation="vertical">
               <include layout="@layout/hometop"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   ></include>
            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:tabSelectedTextColor="#333333"
                app:tabPaddingStart="2dp"
                app:tabMinWidth="50dp"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabIndicatorHeight="2dp"
                android:background="#F5F5F5"
                app:tabGravity="fill"
                app:tabTextColor="#999999"
                app:tabIndicatorColor="#F5F5F5"
                >
            </android.support.design.widget.TabLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </android.support.design.widget.CoordinatorLayout>
        <ImageView
            android:id="@+id/im_qindao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/syqdant2x"
            android:layout_marginTop="85dp"
            android:layout_gravity="right"
            />
    </FrameLayout>
</LinearLayout>
