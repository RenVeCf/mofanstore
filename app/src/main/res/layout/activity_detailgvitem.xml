<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/ipd_baiseback"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.mofanstore.util.RoundImagecfView
                android:id="@+id/evale_img"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:src="@mipmap/sytgt12x"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:layout_width="108dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.mofanstore.util.RoundAngleImageView
                    android:id="@+id/userimg"
                    android:layout_width="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/pgotim"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_toRightOf="@+id/userimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="11dp"
                    android:textColor="#333333"
                    android:text="陀思妥"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_lvname"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="包装高大上，宝贝小巧精致，期待有实际效果！"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12dp"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
