<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ></include>
    <RelativeLayout
        android:id="@+id/user_forget"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="意见反馈"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#333333"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_next2"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改密码"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#333333"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_next2"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_qchu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清除缓存"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_apphunc"
            android:layout_toLeftOf="@+id/im_qchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0M"
            android:textSize="12dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="#999999"
            />
        <ImageView
            android:id="@+id/im_qchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_next2"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_renzhen"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="好评鼓励"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#333333"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_next2"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llbooton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/comnitBTM"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="退出当前登录账户"
            android:textColor="#3F3F3F"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
