<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <com.mofanstore.util.RoundAngleImageView
                android:id="@+id/userimg"
                android:layout_width="33dp"
                android:layout_marginRight="10dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/pgotim"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/tv_username"
                android:layout_toRightOf="@+id/userimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="陀思妥"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_below="@+id/tv_username"
                android:layout_toRightOf="@+id/userimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12dp"
                android:textColor="#BBBBBB"
                android:text="10分钟前"
                />
            <TextView
                android:id="@+id/tv_huidu"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textSize="12dp"
                android:background="@mipmap/huifubtm"
                android:textColor="#FFFFFF"
                android:text="回复"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_telte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞了这条卖家秀"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textColor="#000000"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="#F1F1F1"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/userphoto"
                android:layout_width="80dp"
                android:layout_marginRight="10dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xxlbt2x"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/tv_username2"
                android:layout_toRightOf="@+id/userphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="#333333"
                android:text="芥川之芥"
                />
            <LinearLayout
                android:layout_below="@+id/tv_username2"
                android:layout_toRightOf="@+id/userphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_userphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="12dp"
                    android:textColor="#999999"
                    android:text="无论是材质,颜色,还是质地都超级好!显瘦!显白!一点毛病都没有!尤其是抽绳可以把裙摆..."
                    />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4"></View>
</LinearLayout>
