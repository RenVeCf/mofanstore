<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    >

    <com.mofanstore.util.city.WheelView
        android:id="@+id/province"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="#ccc"
        app:lineHeight="1dp"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="#ccc"
        app:normalTextSize="14sp"
        app:selectedTextColor="#333"
        app:selectedTextSize="18sp"
        app:unitHight="50dp"
        />

    <com.mofanstore.util.city.WheelView
        android:id="@+id/city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="#ccc"
        app:lineHeight="1dp"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="#ccc"
        app:normalTextSize="14sp"
        app:selectedTextColor="#333"
        app:selectedTextSize="18sp"
        app:unitHight="50dp"
        />
    <com.mofanstore.util.city.WheelView
        android:id="@+id/area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="#ccc"
        app:lineHeight="1dp"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="#ccc"
        app:normalTextSize="14sp"
        app:selectedTextColor="#333"
        app:selectedTextSize="18sp"
        app:unitHight="50dp"
        />

</LinearLayout>