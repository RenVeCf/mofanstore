<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ></include>

    <RelativeLayout
        android:id="@+id/adder_xinzeng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/adder_name"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="收件人："
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="#333333"
            android:gravity="center|left"
            />
        <EditText
            android:layout_toRightOf="@+id/adder_name"
            android:id="@+id/adder_name_et"
            android:layout_width="wrap_content"
            android:textColor="#999999"
            android:textSize="14dp"
            android:layout_marginRight="15dp"
            android:textColorHint="#999999"
            android:hint="请输入收件人"
            android:singleLine="true"
            android:maxLength="20"
            android:ellipsize="end"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/adder_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/adder_phone_tv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="手机号码："
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            />
        <EditText
            android:layout_toRightOf="@+id/adder_phone_tv"
            android:id="@+id/adder_phone_et"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#999999"
            android:textSize="14dp"
            android:textColorHint="#999999"
            android:hint="请输入手机号码"
            android:phoneNumber="true"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/adder_phone_tv2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="邮箱(选填)："
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            />
        <EditText
            android:layout_toRightOf="@+id/adder_phone_tv2"
            android:id="@+id/adder_phone_et2"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#999999"
            android:textSize="14dp"
            android:textColorHint="#999999"
            android:hint="请输入邮箱"
            android:phoneNumber="true"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_youbian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/adder_phone_tv3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="邮编："
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            />
        <EditText
            android:layout_toRightOf="@+id/adder_phone_tv3"
            android:id="@+id/adder_phone_et3"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#999999"
            android:textSize="14dp"
            android:textColorHint="#999999"
            android:hint="请输入邮编"
            android:phoneNumber="true"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/adder_diqu2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/adder_diqu_tv2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="所在国家："
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            />
        <TextView
            android:layout_toRightOf="@+id/adder_diqu_tv2"
            android:id="@+id/adder_diqu_et2"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#999999"
            android:textSize="14dp"
            android:textColorHint="#999999"
             android:text="中国"
            android:gravity="center|left"
            android:drawableRight="@mipmap/icon_next2"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/adder_diqu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/adder_diqu_tv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="所在城市："
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            />
        <TextView
            android:layout_toRightOf="@+id/adder_diqu_tv"
            android:id="@+id/adder_diqu_et"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#999999"
            android:textSize="14dp"
            android:textColorHint="#999999"
            android:hint="省 市 区"
            android:gravity="center|left"
            android:drawableRight="@mipmap/icon_next2"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="1dp"
        >
        <TextView

            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="详细地址："
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            />
        <EditText
            android:id="@+id/adder_detiail_et"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:textColor="#999999"
            android:textSize="14dp"
            android:textColorHint="#999999"
            android:hint="请输入详细地址"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_height="55dp"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="设为默认收货地址"
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            />
        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#6E6E6E"
            style="@style/check_agree1"
            android:layout_centerInParent="true"
            android:checked="false" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>
    <Button
        android:id="@+id/adder_baocun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:textSize="17dp"
        android:textColor="#FFFFFF"
        android:text="添加收货地址"
        android:background="@mipmap/btmlog"
        />
</LinearLayout>
