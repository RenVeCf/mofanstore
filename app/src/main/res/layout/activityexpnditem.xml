<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="160dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:orientation="horizontal"
        >
        <LinearLayout
           android:id="@+id/ll1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <ImageView
                    android:id="@+id/evale_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/sytgt12x"
                    android:scaleType="fitXY"
                    />

            </FrameLayout>
            <TextView
                android:id="@+id/tv_lvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="法式复古裙过膝超仙碎花群"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textSize="12dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"

                >
                <TextView
                    android:id="@+id/tv_lvzhiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥238"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:layout_marginBottom="15dp"
                    />
                <TextView
                    android:id="@+id/zhekou"
                    android:layout_toRightOf="@+id/tv_lvzhiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥238"
                    android:layout_marginTop="12dp"
                    android:textColor="#999999"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_marginBottom="15dp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:visibility="gone"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:background="@drawable/ipd_huiseback"
            >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/zxgd2x"
                    android:layout_marginTop="45dp"
                    />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="#999999"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12dp"
                />


        </LinearLayout>
    </FrameLayout>
</LinearLayout>
