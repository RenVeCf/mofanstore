<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F3F3F"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:id="@+id/back"
            android:layout_width="49dp"
            android:layout_height="49dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back2"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/tv_btm1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:text="通过手机找回"
            android:textSize="14dp"
            android:drawableBottom="@mipmap/line2"
            android:textColor="#D4D4D4"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_btm2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="通过邮箱找回"
            android:textSize="14dp"
            android:layout_marginLeft="45dp"
            android:textColor="#D4D4D4"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rled1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="58dp"
        >
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@mipmap/zcsj2x"
            android:drawablePadding="10dp"
            android:background="@null"
            android:hint="输入您的手机号"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:textSize="14dp"
            android:textColorHint="#D4D4D4"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/fg_code"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="phone"
            android:textColorHint="#D4D4D4"
            android:phoneNumber="true"
            android:drawableLeft="@mipmap/codelog"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/bt_getAuthCode"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#D4D4D4"
            android:textSize="12dp"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:id="@+id/fg_psw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:hint="输入新的登录密码"
            android:textColorHint="#D4D4D4"
            android:password="true"
            android:drawableLeft="@mipmap/mima"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:textSize="14dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20DDDDDD"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            ></View>
    </RelativeLayout>


    <Button
        android:id="@+id/comnit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="56dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="确定"
        android:background="@mipmap/chunsebg"
        android:textColor="#ffffff"
        android:textSize="16sp" />


</LinearLayout>
