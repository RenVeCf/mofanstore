<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:orientation="horizontal"
        android:background="@drawable/ipd_baiseback"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp">
                <ImageView
                    android:id="@+id/evale_img"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/sytgt12x"
                    android:scaleType="fitXY"
                    />

            </FrameLayout>
            <TextView
                android:id="@+id/tv_lvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="法式复古裙过膝超仙碎花群法式复古裙过膝超仙碎花群法式复古裙过膝超仙碎花群"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:maxLines="2"
                android:gravity="center|left"
                android:textSize="12dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"

                >
                <TextView
                    android:id="@+id/tv_lvzhiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥238"
                    android:layout_marginTop="10dp"
                    android:textColor="#333333"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/zhekou"
                    android:layout_toRightOf="@+id/tv_lvzhiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥238"
                    android:layout_marginTop="12dp"
                    android:textColor="#999999"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textSize="10dp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
